[color]
    ui = true
[credential]
    helper = cache --timeout=36000
[alias]
    st = status
    ci = commit
    bb = branch
    bbc = branch --show-current
    bls = for-each-ref --sort=-committerdate refs/heads/ --format='%(refname:short) %(committerdate:relative)'
    co = checkout
    df = diff
    sub = submodule
    lg = log -p
[user]
    name = pmou
    email = p@mou.dev
[core]
    editor = $EDITOR
	excludesfile = /home/moomou/.gitignore_global
    attributesfile = ~/.gitattributes_global
    fscache = true
    preloadindex = true
    autocrlf = false
    ;pager = diff-so-fancy | less --tabs=4 -RFX
[grep]
    linenumber = true
[gc]
    auto = 256
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[color "diff"]
    meta = yellow
    frag = magenta bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[diff "lockb"]
	textconv = bun
	binary = true
